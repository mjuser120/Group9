<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_homepage"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:backgroundTint="#B0A4FF"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Dashboard"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                
                <FrameLayout
                    android:id="@+id/frame_eye_ears"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:background="#D6D1D1">

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/btn_eye"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/view_unscreen" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/btn_ears"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ear_unscreen" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eye and Ears"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_nose_mouth"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:background="#D6D1D1">

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/btn_nose"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nose_unscreen" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/btn_mouth"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/lips_unscreen" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nose and Mouth"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/frame_body"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    android:background="#D6D1D1">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/btn_others"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/chest_unscreen" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_sun_moon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#D6D1D1">

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/btn_sun"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sun_unscreen" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/btn_moon"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/moon_unscreen" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="morning and night routine"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </FrameLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frame_quiz"
                android:layout_width="315dp"
                android:layout_height="160dp"
                android:layout_marginRight="20dp"
                android:background="#D6D1D1">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/btn_quiz"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/quiz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="Quiz"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </FrameLayout>


        </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>